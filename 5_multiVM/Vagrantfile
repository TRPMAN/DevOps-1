Vagrant.configure("2") do |config|
  # Define shared settings (if any)
  config.vm.box_check_update = false

  # web01 - Ubuntu 20.04
  config.vm.define "web01" do |web01|
    web01.vm.box = "ubuntu/focal64"
    web01.vm.hostname = "web01"
    web01.vm.network "private_network", ip: "192.168.56.31"
  end

  # web02 - Ubuntu 20.04
  config.vm.define "web02" do |web02|
    web02.vm.box = "ubuntu/focal64"
    web02.vm.hostname = "web02"
    web02.vm.network "private_network", ip: "192.168.56.32"
  end

  # db01 - CentOS 7
  config.vm.define "db01" do |db01|
    db01.vm.box = "centos/7"
    db01.vm.hostname = "db01"
    db01.vm.network "private_network", ip: "192.168.56.33"

    # Provisioning (example: install MariaDB and set hostname explicitly)
    db01.vm.provision "shell", inline: <<-SHELL
      hostnamectl set-hostname db01
      yum update -y
      yum install -y mariadb-server
      yum install -y wget unzip mariadb-server
      systemctl enable mariadb
      systemctl start mariadb
    SHELL
  end
end
